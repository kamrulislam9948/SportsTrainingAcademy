            <div style="display: flex; align-items: center; justify-content: space-between; height: 56px; padding: 8px 16px; background-color: #4e69a2; color: #fff;">
                <div style="display: flex; align-items: center;">
                    <img src="Pictures/student-avatar-user-profile-icon.jpg" alt="Profile" style="width: 40px; height: 40px; border-radius: 50%; margin-right: 12px;" />
                    <MudText Typo="Typo.h6" Style="font-weight:bold">Captain Zahirul </MudText>
                </div>
                <div style="display: flex; align-items: center;">
                    <!-- Add your audio and video call icons here -->
                    <img src="Pictures/call_FILL0_wght400_GRAD0_opsz24.png" alt="Audio Call" style="margin-right: 12px; width: 24px; height: 24px;" />
                    <img src="Pictures/video_call_FILL0_wght400_GRAD0_opsz24.png" alt="Video Call" style="width: 24px; height: 24px;" />
                </div>
            </div>

            <div style="height: calc(75% - 30px); overflow-y: auto; display: flex; flex-direction: column-reverse;">
                <!-- Chat messages display area -->
                @foreach (var message in chatMessages.AsEnumerable().Reverse())
            {
                <div style="margin-bottom: 8px; align-self: @(message.Sender == "You" ? "flex-end" : "flex-start");">
                    <div style="display: flex; align-items: flex-end;">
                        @if (message.Sender != "You")
                        {
                            <div style="margin-right: 8px;">
                                <img src="Pictures/student-avatar-user-profile-icon.jpg" style="width: 20px; height: 20px; border-radius: 50%;" />
                            </div>
                        }
                        <div style="max-width: 80%; word-wrap: break-word; border: 1px solid #ddd; border-radius: 8px; padding: 8px; background-color: @(message.Sender == "You" ? "#DCF8C6" : "#fff");">
                            <strong>@message.Sender:</strong> @message.Content
                        </div>
                    </div>
                </div>
            }
        </div>
        <div style="margin-top: 8px; display: flex; padding: 6px 6px; margin-bottom:5px;">
            <MudTextField Variant="Variant.Filled" Label="Type a message" @bind-Value="newMessage"/>
            <MudButton Variant="Variant.Filled" OnClick="SendMessage">Send</MudButton>
        </div>
    </MudPaper>
</MudContainer>




