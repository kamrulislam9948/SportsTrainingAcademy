@code {
    private List<ChatMessage> chatMessages = new List<ChatMessage>
    {
        new ChatMessage { Sender = "Zahirul", Content = "Hello there!" },
        new ChatMessage { Sender = "You", Content = "Hi Zahirul! How are you?" },
        new ChatMessage { Sender = "Zahirul", Content = "I'm good, thanks! How about you?" }
    };

    private string newMessage = string.Empty;

    private void SendMessage()
    {
        if (!string.IsNullOrWhiteSpace(newMessage))
        {
            chatMessages.Add(new ChatMessage { Sender = "You", Content = newMessage });
            newMessage = string.Empty;
        }
    }

    private class ChatMessage
    {
        public string? Sender { get; set; }
        public string? Content { get; set; }
    }
}


